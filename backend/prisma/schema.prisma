generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Supplier {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String    @unique
  category  String?
  location  String?
  createdAt DateTime  @default(now())
  invoices  Invoice[]
  memories  Memory[]
}

model Invoice {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  supplierId  String   @db.ObjectId
  supplier    Supplier @relation(fields: [supplierId], references: [id])
  amount      Float
  date        DateTime
  description String?
  status      String   @default("pending")
  createdAt   DateTime @default(now())
}

model Memory {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  supplierId      String   @db.ObjectId
  supplier        Supplier @relation(fields: [supplierId], references: [id])
  type            String
  content         String
  importanceScore Float    @default(0.5)
  lifecycleState  String   @default("active")
  createdAt       DateTime @default(now())

  @@index([supplierId])
}
